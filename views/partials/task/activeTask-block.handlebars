<div class="card mb-1">
    <div class="card-header p-0 bg-info border-bottom " id="task-{{id}}-name">
        <a data-toggle="collapse" data-parent="#taskListAccordion" href="#task{{id}}" aria-expanded="true"
            aria-controls="headingTwo">
            <i class="fas fa-dog fa-2x p-3 mr-4 float-left black-text bg-white" aria-hidden="true"></i>
            <h4 class="text-uppercase text-white mb-0 py-3 mt-1">
                {{task}}
            </h4>
        </a>
    </div>
    <div id="task{{id}}" class="collapse" aria-labelledby="headingTwo" data-parent="#taskListAccordion">
        <div class="card-body" id="task-{{id}}-desc">
            {{specialInstr}}
        </div>
        <div class="card-footer">
            <div class="container"></div>
            <button type="button" data-task-id="{{id}}"
                class="btn btn-sm btn-start-task waves-effect btn-outline-info my-0"><i class="fas fa-play fa-2x"
                    aria-hidden="true"></i></button>
            <button type="button" data-task-id="{{id}}"
                class="btn btn-sm btn-complete-task waves-effect btn-outline-info my-0 float-right "><i
                    class=" fas fa-check fa-2x" aria-hidden="true"></i></button>



        </div>
    </div>
</div>